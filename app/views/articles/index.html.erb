<style>
  .mdl-layout{
    align-items: center;
    justify-content: center;
  }
</style>

<h1 class="mdl-layout">Listing articles</h1>
<h3 class="mdl-layout"><%= link_to 'New article', new_article_path %></h2>
<div class="mdl-layout">
<table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp ">
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %> <br><h6> <%= link_to 'Show', article_path(article) %></h6></td>
      <td><%= article.text %> <br> <%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
                  <%= link_to 'Edit', edit_article_path(article) %></td>



    </tr>


  <% end %>

</table>
</div>
<br>
