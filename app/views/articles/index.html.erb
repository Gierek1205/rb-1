<style>
.maciej {
  color: cyan;
  text-align: center;
}

.ja{
  color: red
}

</style>

<h2 class="maciej">New articles</h2>

<div class="ja">
<%= form_for :article do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>
