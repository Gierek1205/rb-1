
<head>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
</head>

<style>
  .mdl-layout{
    align-items: center;
    justify-content: center;
  }

  .align-right{
    text-align: right;
    margin-right: 50px;

  }

.demo-card-wide.mdl-card {
  width: 512px;
}
.demo-card-wide > .mdl-card__title {
  color: black;
  height: 176px;
  background: url('../assets/demos/welcome_card.jpg') center / cover;
}
.demo-card-wide > .mdl-card__menu {
  color: black;
}

</style>



<h1 class="mdl-layout">All articles:</h1>

  <h6 class="align-right"><%= link_to 'New article', new_article_path %></h6>


<br>

<div class="mdl-grid">
<% @articles.reverse.each do |article| %>
<div class="mdl-cell md-cell--4-col">

<div class="demo-card-wide mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title">
    <h2 class="mdl-card__title-text"><%= article.title %></h2>
  </div>
  <div class="mdl-card__supporting-text">
      <td><%= truncate(article.text, 30) %></td>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
    </a>
    <%= link_to 'Show', article_path(article) %>
    <%= link_to 'Destroy', article_path(article),
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
                <%= link_to 'Edit', edit_article_path(article) %>

  </div>
  <div class="mdl-card__menu">
    <button id="demo-menu-lower-right"
        class="mdl-button mdl-js-button mdl-button--icon">
  <i class="material-icons">more_vert</i>
</button>

<ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
    for="demo-menu-lower-right">
  <li class="mdl-menu__item">Some Action</li>
  <li class="mdl-menu__item">Another Action</li>
  <li disabled class="mdl-menu__item">Disabled Action</li>
  <li class="mdl-menu__item">Yet Another Action</li>
</ul>
  </div>
</div>
</div>

<br>

<% end %>
</div>
